// Product Views - Track when products are viewed
model ProductView {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  userId    String?  @db.ObjectId // Null for anonymous views
  user      User?    @relation(fields: [userId], references: [id])
  
  // Anonymous tracking
  sessionId String?  // For anonymous users
  ipAddress String?
  userAgent String?
  
  // Page context
  referrer  String?
  source    String?  // organic, social, direct, etc.
  
  createdAt DateTime @default(now())
  
  @@map("product_views")
}

// Analytics Snapshots - Pre-calculated analytics for performance
model AnalyticsSnapshot {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  sellerId    String   @db.ObjectId
  seller      User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  // Date range
  startDate   DateTime
  endDate     DateTime
  period      String   // "day", "week", "month", "quarter", "year"
  
  // Metrics
  metrics     Json     // Store calculated metrics as JSON
  
  // Status
  isComplete  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([sellerId, startDate, endDate, period])
  @@map("analytics_snapshots")
}

// Store Performance - Daily aggregated stats
model StorePerformance {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  sellerId    String   @db.ObjectId
  seller      User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  date        DateTime // Date for this performance record
  
  // Sales metrics
  revenue     Float    @default(0)
  orders      Int      @default(0)
  items       Int      @default(0)
  
  // Traffic metrics
  views       Int      @default(0)
  visitors    Int      @default(0)
  sessions    Int      @default(0)
  
  // Conversion metrics
  conversionRate  Float @default(0)
  averageOrderValue Float @default(0)
  
  // Top products (stored as JSON array)
  topProducts Json?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([sellerId, date])
  @@map("store_performance")
}

